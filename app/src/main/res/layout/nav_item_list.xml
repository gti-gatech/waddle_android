<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/_16dp"
    android:paddingEnd="@dimen/_10dp"
    android:paddingTop="@dimen/_15dp"
    android:paddingBottom="@dimen/_15dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_nav_about" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_7dp"
        android:paddingEnd="@dimen/_10dp"
        style="@style/labelText"
        android:id="@+id/textViewTitle"
        android:gravity="center"
        android:textColor="@color/colorTextOpacity_80"
        android:textSize="@dimen/_14sp"
        android:fontFamily="@font/helvetica_light"
        android:layout_gravity="center"
        android:text="@string/message"/>
</androidx.appcompat.widget.LinearLayoutCompat>