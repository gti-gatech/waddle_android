<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="android:windowActionBarOverlay">true</item>-->

    </style>

    <style name="button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:shadowDx">0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/_10dp</item>
        <item name="android:paddingBottom">@dimen/_10dp</item>
        <item name="fontFamily">@font/helvetica_medium</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <style name="buttonTrips" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/_2dp</item>
        <item name="android:paddingBottom">@dimen/_2dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontFamily">@font/helvetica_light</item>
        <item name="android:textSize">@dimen/_10sp</item>
    </style>

    <style name="buttonNotification" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="backgroundTint">@color/colorLightBlue</item>
        <item name="android:shadowDx">0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">@dimen/_6dp</item>
        <item name="android:paddingBottom">@dimen/_6dp</item>
        <item name="fontFamily">@font/helvetica_light</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="headerTitle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
    </style>

    <style name="labelText" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
    </style>

    <style name="labelText_14_Medium" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/helvetica_medium</item>
    </style>

    <style name="labelBottomText" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTextTermsConditions</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
    </style>

    <style name="labelText_12_Medium" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:fontFamily">@font/helvetica_medium</item>
    </style>

    <style name="inputText" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorForInputHint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
        <item name="android:paddingTop">@dimen/_5dp</item>
        <item name="android:paddingBottom">@dimen/_5dp</item>
        <item name="android:paddingEnd">@dimen/_5dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="ProgressBar" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/animate_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_fade_exit</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/helvetica_light</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="RobotoCalendarDayOfTheWeekText">
        <item name="android:textColor">@color/color_calendar_week_name</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_regular</item>

    </style>

    <style name="RobotoCalendarDayOfTheMonthText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/roboto_calendar_normal_day_font</item>
        <item name="fontFamily">font/helvetica_light</item>
    </style>
    <style name="DatePickerSpinner">
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <style name="tabWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/helvetica_light</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>